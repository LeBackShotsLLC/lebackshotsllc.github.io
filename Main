    <script>
        window.onload = function() {
            generateFebruary();
        };

        function generateFebruary() {
            const container = document.getElementById('calendarContainer');
            const totalDays = 28; // Feb
            
            // Randomly select 10 unique days for the 'X'
            const markedDays = new Set();
            while(markedDays.size < 10) {
                markedDays.add(Math.floor(Math.random() * totalDays) + 1);
            }

            for (let i = 1; i <= totalDays; i++) {
                const dayDiv = document.createElement('div');
                dayDiv.className = 'day-box border border-slate-800/50 hover:bg-slate-800 transition-colors';
                
                // Add day number
                dayDiv.innerHTML = `<span class="text-slate-500 text-xs absolute top-1 left-1">${i}</span>`;
                
                // Add X if it's one of the random days
                if (markedDays.has(i)) {
                    const xMark = document.createElement('div');
                    xMark.className = 'x-mark';
                    xMark.innerText = 'X';
                    dayDiv.appendChild(xMark);
                    dayDiv.classList.add('bg-red-500/5');
                    dayDiv.classList.replace('border-slate-800/50', 'border-red-500/20');
                }
                
                container.appendChild(dayDiv);
            }
        }
    </script>
